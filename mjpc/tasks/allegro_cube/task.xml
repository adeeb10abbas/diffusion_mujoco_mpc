<mujoco model="Allegro Hand Cube Rotation">
  <include file="../common.xml"/>

  <size memory="1M"/>

  <!-- not sure if we should do this -->
  <option integrator="implicitfast" iterations="100" ls_iterations="50"/>

  <custom>
    <!-- agent -->
    <numeric name="agent_planner" data="0" />
    <numeric name="agent_horizon" data="0.5" />
    <numeric name="agent_timestep" data="0.01" />
    <numeric name="agent_policy_width" data="0.0035" />
    <numeric name="sampling_spline_points" data="3" />
    <numeric name="sampling_exploration" data="0.2" />
    <numeric name="sampling_trajectories" data="100"/>
    <numeric name="robust_xfrc" data="0.004" />
    <numeric name="gradient_spline_points" data="3" />
  </custom>

  <!-- Set the camera viewpoint -->
  <statistic extent="0.4" center="0.3 0.1 0"/>
  <visual>
    <quality shadowsize="8192"/>
    <global azimuth="180" elevation="-30"/>
  </visual>

  <!-- Set default friction coefficient -->
  <default>
    <geom friction=".1"/>
  </default>

  <!-- Create the scene, including floor and the interactive target cube. -->
  <worldbody>
    <light pos="0 -0.1 0.5" dir="0 0.2 -1" diffuse="0.7 0.7 0.7" specular="0.3 0.3 0.3"
        directional="true" castshadow="true"/>
    <geom name="floor" pos="0 0 -0.2" size="0 0 0.05" type="plane" material="blue_grid"/>
    <body name="goal" pos="0.325 0.17 0.0475">
      <joint axis="0 0 1" damping="0.001"/>
      <geom type="box" size=".03 .03 .03" mass=".122" material="cube" contype="0" conaffinity="0"/>
    </body>
  </worldbody>

  <sensor>
    <!-- Residuals -->
    <!-- The numbers in the 'user' field have the following meaning:
      norm type:
        0 : 0.5 * x' * x
        1 : ((x*x')^q + p^(2*q))^(1/2/q) - p
        2 : sqrt(x*x' + p^2) - p
        3 : p^2 * (cosh(x/p) - 1)
        5 : abs(x)^p
        6 : sqrt(x^2 + p^2) - p
        7 : (abs(x)^q + p^q)^(1/q) - p
        8 : p*log(1 + exp(x/p))
      default weight: Default weight on this residual.
      weight lower bound: Lower bound on this weight for the GUI.
      weight upper bound: Upper bound on this weight for the GUI.
      norm parameters: parameters (e.g., p, q) for norms
    -->
    <user name="Cube Position" dim="3" user="1 50 0 100 0.02 2"/>
    <user name="Cube Orientation" dim="3" user="0 5 0 10" />
    <user name="Cube Velocity" dim="3" user="0 20 0 20" />
    <user name="Actuation" dim="16" user="0 5 0.0 10" />

    <!-- Measurements we want to use -->
    <framequat name="cube_goal_orientation" objtype="body" objname="goal"/>
  </sensor>
 
  <include file="cube.xml"/>
  <include file="right_hand.xml"/>
</mujoco>
